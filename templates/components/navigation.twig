        ] %}
        {% for page in pages %}
          <a href="{{ basePath }}{{ page.id }}"
            class="flex items-center gap-2 px-4 py-2 rounded-lg transition
             {% if currentPage == page.id %}bg-blue-500 text-white{% else %}
               text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700
             {% endif %}"
          >
            {{ page.icon | raw }}
            <span class="hidden lg:inline">{{ page.label }}</span>
