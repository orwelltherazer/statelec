<aside class="fixed inset-y-0 left-0 w-56 bg-[#3d4465] border-r border-[#4a5178] transform transition-transform duration-300 ease-in-out z-30" id="sidebar">
  <div class="h-full flex flex-col">
    {# Logo and Brand #}
    <div class="h-16 flex items-center px-6 border-b border-[#4a5178]">
      <div class="flex items-center gap-2">
        <div class="w-7 h-7 bg-[#39C0ED] flex items-center justify-center text-white text-sm font-bold">
          S
        </div>
        <h1 class="text-base font-semibold text-white">StatElec</h1>
      </div>
    </div>

    {# Navigation #}
    <div class="flex-1 overflow-y-auto py-3 px-3 space-y-0.5">
      {% set pages = [
        { id: 'dashboard', label: 'Dashboard', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>', badge: null },
        { id: 'historique', label: 'Historique', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>', badge: null },
        { id: 'cout', label: 'Coûts', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>', badge: null },
        { id: 'analyse', label: 'Analyse', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>', badge: 'NEW' },
        { id: 'indicateurs', label: 'Indicateurs', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"></path><path d="M18 17V9"></path><path d="M13 17V5"></path><path d="M8 17v-3"></path></svg>', badge: null },
        { id: 'alertes', label: 'Alertes', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>', badge: null },
        { id: 'parametres', label: 'Paramètres', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M12 1v6m0 6v6m6-12h-6m-6 0H1m11 6H1m11 6H1"></path></svg>', badge: null },
        { id: 'diagnostic', label: 'Diagnostic', icon: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.77 3.77z"></path></svg>', badge: null }
      ] %}
      
      {% for page in pages %}
        <a href="{{ basePath }}{{ page.id }}"
           class="flex items-center justify-between gap-2 px-3 py-2 transition-colors
           {% if currentPage == page.id %}
             bg-[#39C0ED] text-white
           {% else %}
             text-[#a3a8c3] hover:bg-[#4a5178] hover:text-white
           {% endif %}"
        >
          <div class="flex items-center gap-3">
            {{ page.icon | raw }}
            <span class="text-sm font-medium">{{ page.label }}</span>
          </div>
          {% if page.badge %}
            <span class="px-1.5 py-0.5 text-[9px] font-bold bg-[#F672A7] text-white uppercase">
              {{ page.badge }}
            </span>
          {% endif %}
        </a>
      {% endfor %}
    </div>

    {# Date at bottom #}
    <div class="p-3 border-t border-[#4a5178]">
      <div class="flex items-center gap-2 px-3 py-2 text-[#a3a8c3]">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
        <span id="sidebar-date" class="text-xs"></span>
      </div>
    </div>
  </div>
</aside>

{# Mobile overlay #}
<div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden lg:hidden"></div>

<script>
  // Update sidebar date
  document.addEventListener('DOMContentLoaded', () => {
    const dateElement = document.getElementById('sidebar-date');
    if (dateElement) {
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      const currentDate = new Date().toLocaleDateString('fr-FR', options);
      // Capitalize first letter
      dateElement.textContent = currentDate.charAt(0).toUpperCase() + currentDate.slice(1);
    }
  });
</script>
