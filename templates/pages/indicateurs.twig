{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const basePath = "{{ basePath }}";
        const theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
        let currentPeriode = "{{ periode }}";

        // Boutons de période
        const periodeBtns = document.querySelectorAll('.periode-btn');
        periodeBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                currentPeriode = this.dataset.periode;
                updatePeriodeButtons();
                loadIndicateurs();
            });
        });

        function updatePeriodeButtons() {
            periodeBtns.forEach(btn => {
                if (btn.dataset.periode === currentPeriode) {
                    btn.classList.add('bg-blue-500', 'text-white');
                    btn.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
                } else {
                    btn.classList.remove('bg-blue-500', 'text-white');
                    btn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
                }
            });
        }

        async function loadIndicateurs() {
            try {
                const response = await fetch(`${basePath}api/indicateurs?periode=${currentPeriode}`);
                if (!response.ok) throw new Error('Erreur de chargement');
                
                const data = await response.json();
                updateUI(data);
            } catch (error) {
                console.error('Erreur:', error);
            }
        }

        function updateUI(data) {
            // Mettre à jour les valeurs
            document.getElementById('puissance-instantanee').textContent = data.mesures_brutes.puissance_instantanee + ' W';
            document.getElementById('puissance-max-jour').textContent = data.mesures_brutes.puissance_max.jour + ' W';
            document.getElementById('puissance-max-semaine').textContent = data.mesures_brutes.puissance_max.semaine + ' W';
            document.getElementById('puissance-max-mois').textContent = data.mesures_brutes.puissance_max.mois + ' W';
            
            document.getElementById('energie-jour').textContent = data.mesures_brutes.energie_consommee.jour + ' kWh';
            document.getElementById('energie-semaine').textContent = data.mesures_brutes.energie_consommee.semaine + ' kWh';
            document.getElementById('energie-mois').textContent = data.mesures_brutes.energie_consommee.mois + ' kWh';
            
            document.getElementById('conso-nocturne').textContent = data.stats_temporelles.conso_nocturne + ' W';
            
            document.getElementById('veille-globale').textContent = data.gaspillage.veille_globale + ' W';
            document.getElementById('base-nocturne').textContent = data.gaspillage.base_nocturne + ' W';
            
            const ecart = data.gaspillage.ecart_weekend.ecart_pourcent;
            const ecartEl = document.getElementById('ecart-weekend');
            if (ecart !== null) {
                ecartEl.textContent = ecart + '%';
                ecartEl.classList.remove('text-gray-400', 'text-2xl');
                ecartEl.classList.add('text-3xl', 'font-bold');
            } else {
                ecartEl.innerHTML = '<span class="text-gray-400 text-2xl">N/A</span>';
            }
            
            document.getElementById('cout-jour').textContent = data.cout.couts.jour + '€';
            document.getElementById('cout-semaine').textContent = data.cout.couts.semaine + '€';
            document.getElementById('cout-mois').textContent = data.cout.couts.mois + '€';
            document.getElementById('cout-projete').textContent = data.cout.cout_projete + '€';

            // Mettre à jour les graphiques
            updateCharts(data);
        }

        let courbeChart, profilChart;

        function updateCharts(data) {
            // Courbe temporelle
            if (courbeChart) courbeChart.destroy();
            const ctxCourbe = document.getElementById('courbeTemporelleChart').getContext('2d');
            courbeChart = new Chart(ctxCourbe, {
                type: 'line',
                data: {
                    labels: data.mesures_brutes.courbe_temporelle.map(d => new Date(d.timestamp).toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' })),
                    datasets: [{
                        label: 'Puissance (W)',
                        data: data.mesures_brutes.courbe_temporelle.map(d => d.papp),
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: { grid: { color: theme === 'dark' ? '#374151' : '#e5e7eb' }, ticks: { color: theme === 'dark' ? '#9ca3af' : '#6b7280' } },
                        y: { beginAtZero: true, grid: { color: theme === 'dark' ? '#374151' : '#e5e7eb' }, ticks: { color: theme === 'dark' ? '#9ca3af' : '#6b7280' } }
                    },
                    plugins: {
                        legend: { labels: { color: theme === 'dark' ? '#e5e7eb' : '#374151' } },
                        zoom: {
                            pan: {
                                enabled: true,
                                mode: 'x',
                                threshold: 5
                            },
                            zoom: {
                                wheel: {
                                    enabled: true,
                                    speed: 0.1
                                },
                                pinch: {
                                    enabled: true
                                },
                                mode: 'x'
                            },
                            limits: {
                                x: {min: 'original', max: 'original'}
                            }
                        }
                    }
                }
            });

            // Profil journalier
            if (profilChart) profilChart.destroy();
            const ctxProfil = document.getElementById('profilJournalierChart').getContext('2d');
            profilChart = new Chart(ctxProfil, {
                type: 'bar',
                data: {
                    labels: data.stats_temporelles.profil_journalier.map(d => d.heure + 'h'),
                    datasets: [{
                        label: 'Puissance moyenne (W)',
                        data: data.stats_temporelles.profil_journalier.map(d => d.puissance),
                        backgroundColor: '#8b5cf6'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: { grid: { color: theme === 'dark' ? '#374151' : '#e5e7eb' }, ticks: { color: theme === 'dark' ? '#9ca3af' : '#6b7280' } },
                        y: { beginAtZero: true, grid: { color: theme === 'dark' ? '#374151' : '#e5e7eb' }, ticks: { color: theme === 'dark' ? '#9ca3af' : '#6b7280' } }
                    },
                    plugins: {
                        legend: { labels: { color: theme === 'dark' ? '#e5e7eb' : '#374151' } }
                    }
                }
            });
        }

        // Chargement initial
        loadIndicateurs();

        // Mise à jour automatique toutes les 30 secondes
        setInterval(loadIndicateurs, 30000);
    });
</script>
{% endblock %}
