{% extends "base.twig" %}

{% block title %}Erreur de connexion - Statelec{% endblock %}

{% block navigation %}{% endblock %}

{% block content %}
<main class="p-6 sm:p-10 space-y-6">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-800 text-gray-900 dark:text-white rounded-lg shadow-lg p-8 text-center">
            <div class="mb-6">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 dark:bg-red-900/20 rounded-full mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-500">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                    Incident technique
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Erreur de connexion à la base de données. Veuillez réessayer plus tard.
                </p>
            </div>

            <div class="space-y-3">
                <button onclick="location.reload()" class="w-full bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition font-medium">
                    Réessayer
                </button>
            </div>
        </div>
    </div>
</main>
{% endblock %}

{% block scripts %}
<script>
    // Masquer la navigation en mode erreur DB
    document.addEventListener('DOMContentLoaded', function() {
        const nav = document.querySelector('nav');
        if (nav) nav.style.display = 'none';
    });
</script>
{% endblock %}